<!DOCTYPE html>
<html>
  <head>
  <title>Blog</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
      <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
     <%= stylesheet_link_tag 'wind', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  
      <% if user_signed_in? %>
        <%= render 'layouts/header' %> 
      <% else %>
      <nav class="bg-indigo-700 shadow-lg">
        <div class="container mx-auto">
        <div class="sm:flex justify-center">
          <ul class="text-gray-400 sm:self-center text-xl.border-t.sm:border-none">
            <li class="sm:inline-block"><%= link_to 'Sign In', new_user_session_path, :class =>"p-3 hover:text-white" %></li>
            <li class="sm:inline-block"><%= link_to 'Sign Up', new_user_registration_path, :class =>"p-3 hover:text-white" %></li>
          </ul>  
        </div>
        </div>
      </nav>
      <% end %>
<div class="flex justify-center" >
     <%= yield %>
      <% if flash.any? %>
        <%= render 'layouts/messages' %>
      <% end %>
<div>
  </body>
</html>
