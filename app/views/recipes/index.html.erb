<div class="w-1/2">
<div class="flex justify-center mb-4">
  <h2 class="text-xl font-bold"> My recipes</h2>
</div>
  <div class="border">
  <% current_user.recipes.each do |recipe| %>
  <div class="border grid gap-4 grid-cols-2 p-1 mb-4">
  <div class="grid gap-4 grid-cols-1">
    <h3>     <%= link_to recipe.name, user_recipe_path( recipe.user.id, recipe.id  ), :class => "no-underline hover:underline text-blue-600 text-lg"%> </h3>
    <%= button_to "REMOVE", user_recipe_path(current_user.id, recipe), method: :delete, 
                data: {confirm: 'Are you sure that you want to delete this recipe?'}, :class => "inline-block px-6 py-2.5 text-red-600 font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-red-700 hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-800 active:shadow-lg transition duration-150 ease-in-out" %>
</div>
<div>
    <p class="text-lg"><%= recipe.description %></p>
  </div>
    </div>
  <% end %>
  </div>
</div>


