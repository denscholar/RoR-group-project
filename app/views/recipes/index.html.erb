<ul>
<% if user_signed_in? %>
<li><%= link_to "My Recipes"%></li>
<% end%>


</ul>


<h1>This is the recipes page</h1>

<div>
  <%=link_to "New Recipe", new_recipe_path  %>
</div>

<div class='recipes'>
    <% @recipes.each do |recipe| %>
        <div>
          <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
          <p><%= recipe.description %></p>
          <ul>
            <li><%=button_to 'Delete', recipe_path(recipe), data: {
                confirm: 'Are you sure you want to delete: #{recipe.name}?',
            }, method: :delete %></li>
          </ul>
        </div>
    <% end %>
</div>